{
  "name": "elm-tachyons-boilerplate",
  "version": "1.0.0",
  "description": "A simple setup for two fantastically functional frontend technologies",
  "main": "index.js",
  "scripts": {
    "dev": "npm run elm-dev & npm run css-dev",
    "build": "npm run elm-build && npm run css-build",
    "elm-build": "elm-make src/elm/Main.elm --output=public/main.js",
    "css-build": "postcss --config postcss-config.js",
    "elm-dev": "elm-live src/elm/Main.elm --output=public/main.js --dir=public --open --debug --pushstate",
    "css-dev": "postcss --watch --config postcss-config.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/andrewMacmurray/elm-tachyons-boilerplate.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/andrewMacmurray/elm-tachyons-boilerplate/issues"
  },
  "homepage": "https://github.com/andrewMacmurray/elm-tachyons-boilerplate#readme",
  "dependencies": {
    "tachyons-custom": "^4.5.4"
  },
  "devDependencies": {
    "autoprefixer": "^6.7.3",
    "elm-live": "^2.7.5",
    "elm-test": "^0.18.12",
    "postcss-clean": "^1.0.2",
    "postcss-cli": "^2.6.0",
    "postcss-custom-media": "^5.0.1",
    "postcss-custom-properties": "^5.0.2",
    "postcss-import": "^9.1.0"
  }
}
